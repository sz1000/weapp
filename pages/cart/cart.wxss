.box {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  background-color: #f1f1f1;
}

.searchBarBox {
  width: 650rpx;
  height: 65rpx;
  margin: 0 auto 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 38rpx;
  padding-right: 10rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
}

.cancelIcon {
  width: 50px;
  height: 50px;
}

.searchBar {
  width: 600rpx;
  margin-left: 20rpx;
}

.searchBarBox image {
  width: 30rpx;
  height: 30rpx;
}

.list {
  margin: 30rpx;
}

.item {
  font-size: 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin-bottom: 20rpx;
  color: #777;
}

