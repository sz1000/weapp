.box {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  background-color: #f1f1f1;
}

.searchBarBox {
  width: 650rpx;
  height: 65rpx;
  margin: 0 auto 20rpx;
  background-color: #fff;
  border-radius: 30rpx;
  padding-left: 38rpx;
  padding-right: 10rpx;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  justify-content: center;
}

.cancelIcon {
  width: 50px;
  height: 50px;
}

.searchBar {
  width: 600rpx;
  margin-left: 20rpx;
}

.searchBarBox image {
  width: 30rpx;
  height: 30rpx;
}

.swiper-warp {
  width: 100%;
}

.container .swiper {
  width: 100%;
}

image {
  width: 100%;
  height: 100%;
}

.page-body {
  display: flex;
  flex: 1;
  flex-direction: column;
}

.item {
  display: flex;
  margin: 20rpx 20rpx 0;
  background: #fff;
  padding: 20rpx;
}

.meta {
  display: flex;
  justify-content: flex-end;
  flex-direction: row;
  flex: 1;
  margin-right: 20rpx;
}

.poster {
  width: 128rpx;
  height: 128rpx;
  line-height: 128rpx;

}

.title {
  width: 280rpx;
  height: 128rpx;
  text-align: center;
  line-height: 128rpx;
  font-size: 32rpx;
}

.rating {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.explain {
  width: 100%;
  padding: 0 10rpx;
  line-height: 2;
  font-size: 24rpx;
  border: 2rpx solid #ccc;
  text-align: center;
}

.subscribe {
  width: 100%;
  padding: 0 10rpx;
  border: 2rpx solid #ccc;
  line-height: 2;
  margin-top: 20rpx;
  font-size: 24rpx;
  text-align: center;
}

.search_content {
  margin: 30rpx;
}

.serch_item {
  padding: 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #ccc;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 64rpx;
  /* overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis; */
}