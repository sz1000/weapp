<view class="container">
  <view class="userinfo">
    <block wx:if="{{!hasUserInfo}}">
      <button class="userAvatarUrl" wx:if="{{canIUseGetUserProfile}}" bindtap="getUserProfile"> 登录 </button>
      <button class="userAvatarUrl" wx:else open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 登录 </button>
    </block>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
</view>
